<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/watchLayout"
    android:padding="20dp"
    android:background="@color/tran"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/adds_bckg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textAllCaps="true"
            android:text="Night Mode Feature"
            android:padding="5dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:background="@color/readColor"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/first_theme"
                android:src="@drawable/night_home"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:id="@+id/second_theme"
                android:src="@drawable/night_shop"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:id="@+id/forth_theme"
                android:src="@drawable/night_task"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/third_theme"
                android:src="@drawable/night_add"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textAllCaps="true"
            android:text="Light Mode Feature"
            android:padding="5dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:background="@color/readColor">


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/light_home"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/light_shop"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/light_task" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/light_add"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="italic|bold"
            android:id="@+id/watch"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@drawable/watch_button"
            android:text="watch video to unlock theme"/>

    </LinearLayout>


</LinearLayout>